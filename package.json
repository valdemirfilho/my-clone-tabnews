{
  "name": "my-clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run services:up && concurrently --names NEXT,JEST --hide NEXT --kill-others --success command-JEST \"next dev\" \"jest --runInBand --verbose\"",
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test:watch": "jest --watchAll --runInBand",
    "services:up": "docker compose --file=infra/compose.yaml up --detach",
    "services:down": "docker compose --file=infra/compose.yaml down",
    "services:stop": "docker compose --file=infra/compose.yaml stop",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --envPath .env.development.local --migrations-dir infra/migrations up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.5.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.15",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "husky": "^9.1.4",
    "jest": "^29.6.2",
    "prettier": "^3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
